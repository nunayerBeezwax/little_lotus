* {
	margin: 0 auto;
}

body {
	font-family: "Caslon";
	color: #3f2619;
}

a {
	text-decoration: none;
}

#slideshow {
	max-width: 50%;
	max-height: 100vh;
}

.fssActive {
	display: none;
}

#fssList {
	display: none;
}

#fssPrev {
	display: none;
}

#fssNext {
	display: none;
}

#fssPlayPause {
	display: none;
}

.homepage-pic-left {
	width: 50%;
	height: 100vh;
	float: left;
}

.homepage-pic-left img {
	width: 100%;
	height: 100vh;
}

.homepage-text-right {
	width: 50%;
	height: 100vh;
	float: left;
	font-family: "Caslon";
}

.homepage-text-right ul {
	list-style-type: none;
	text-align: left;
	line-height: 2.8em;
	width: 20%;
	padding-top: 35vh;
	font-size: 14px;
}

.homepage-text-right ul a {
	color: #3f2619;
}

.homepage-text-right li {
	font-size: 1.3em;
	font-weight: bold;
}

.lotus {
	position: fixed;
	top: 50%;
	left: 50%;
	margin-top: -125px;
  	margin-left: -125px;
}

.page-content {
	width: 100%;
	height: 100vh;
}

.page-text {
	width: 60%;
	float:right;
	padding: 5% 5% 5% 0;
	text-align: justify;
}

.page-text p {
	padding-bottom: 2em;
	text-align: justify;
}

.page-text #title-text {
	font-size: 3em;
	letter-spacing: .15em;
}

#footer-text {
	font-size: 3em;
	padding-top: 1em;
	color: #26193f;
}

.quote {
	font-style: italic;
	text-align: center;
	max-width: 85%;
}

.left-pane {
	float: left;
	height: 100vh;
	width: 30%;
	position: fixed;
}

#pic6 {
	height: 50%;
	width: 100%;
	float:left;
}

#pic7 {
	height: 50%;
	width: 30%;
	float:left;
	position:fixed;
	left: 0;
	bottom: 0;
}

hr.style-seven {
    padding: 0;
    border: none;
    border-top: medium double #333;
    color: #333;
    text-align: center;
    padding-bottom: 0.7em;
}
hr.style-seven:after {
    content: "ยง";
    display: inline-block;
    position: relative; 
    top: -0.7em;  
    font-size: 1.5em;
    padding: 0 0.25em;
    background: white;
}

.menu-container {
	width: 200px;
	position: fixed;
	top: 10%;
	right: 5%;
}

.menu-top:after {
	content: " ";
	display: block;
	height: 0;
	clear: both;
}

#menu-icon {
	width: 35px;
	float: left;
	display: inline-block;
}

.menu-container h1 {
	font-size: 1.5em;
	float: left;
	padding: 10px 20px;
	display: inline-block;
}

#menu {
	float:left;
	clear: both;
	list-style-type: none;
	padding-left: 0;
	display: none;
}

.menu-container li {
	border-bottom: 1px solid #26193f;
	background-color: #ffffff;
	width: 200px;
	float: left;
	line-height: 3em;
	padding-left: 10%;
	font-size: 1.5em;
}

.menu-container li a {
	color: #76472f;
}

@font-face {
	font-family: "Caslon";
	src: url("<%= asset_path('caslon.otf') %>") format("truetype");
}


