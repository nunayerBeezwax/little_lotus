* {
	margin: 0 auto;
}

body {
	font-family: "Caslon";
	color: #3f2619;
}

a {
	text-decoration: none;
}

#slideshow {
	max-width: 50%;
	max-height: 100vh;
}

.fssActive {
	display: none;
}

#fssList {
	display: none;
}

#fssPrev {
	display: none;
}

#fssNext {
	display: none;
}

#fssPlayPause {
	display: none;
}

.homepage-pic-left {
	width: 50%;
	height: 100vh;
	float: left;
}

.homepage-pic-left img {
	width: 100%;
	height: 100vh;
}

.homepage-text-right {
	width: 50%;
	height: 100vh;
	float: left;
	font-family: "Caslon";
}

.homepage-text-right ul {
	list-style-type: none;
	text-align: left;
	line-height: 2.8em;
	width: 20%;
	padding-top: 35vh;
	font-size: 14px;
}

.homepage-text-right ul a {
	color: #3f2619;
}

.homepage-text-right li {
	font-size: 1.3em;
	font-weight: bold;
}

.lotus {
	position: fixed;
	top: 50%;
	left: 50%;
	margin-top: -125px;
  	margin-left: -125px;
}

.page-content {
	width: 100%;
	height: 100vh;
}

.page-text {
	width: 60%;
	float:right;
	padding: 5% 5% 5% 0;
	text-align: justify;
	position: relative;
}

.page-text h2 {
	font-weight: bold;
	padding-bottom: 2%;
	text-transform: uppercase;
}

.page-text h3 {
	padding-bottom: 2%;
}

.page-text p {
	padding-bottom: 2em;
	text-align: justify;
}

.page-text a {
	color: #af6a46;
}

.page-text #title-text {
	font-size: 3em;
	letter-spacing: .15em;
	text-transform: uppercase;
}

#footer-text {
	font-size: 3em;
	padding-top: 1em;
	color: #26193f;
}

.quote {
	font-style: italic;
	text-align: center;
	max-width: 85%;
}

.left-pane {
	float: left;
	height: 100vh;
	width: 30%;
	position: fixed;
}

#pic6 {
	height: 50%;
	width: 100%;
	float:left;
}

#pic7 {
	height: 50%;
	width: 30%;
	float:left;
	position:fixed;
	left: 0;
	bottom: 0;
}

#laurel-pic {
	width: 50%;
	padding-top: 6%;
	float:right;
}

.about-us-text {
	float:left;
	width: 45%;
	padding-top: 3%;
	font-size: 1.4em;
}

hr.style-seven {
    padding: 0;
    border: none;
    border-top: medium double #333;
    color: #333;
    text-align: center;
    padding-bottom: 0.7em;
}
hr.style-seven:after {
    content: "ยง";
    display: inline-block;
    position: relative; 
    top: -0.7em;  
    font-size: 1.5em;
    padding: 0 0.25em;
    background: white;
}

hr.style-two {
    border: 0;
    height: 3px;
    background-image: -webkit-linear-gradient(left, rgba(1,14,87,0), rgba(1,14,87,0.75), rgba(1,14,87,0)); 
    background-image:    -moz-linear-gradient(left, rgba(1,14,87,0), rgba(1,14,87,0.75), rgba(1,14,87,0)); 
    background-image:     -ms-linear-gradient(left, rgba(1,14,87,0), rgba(1,14,87,0.75), rgba(1,14,87,0)); 
    background-image:      -o-linear-gradient(left, rgba(1,14,87,0), rgba(1,14,87,0.75), rgba(1,14,87,0)); 
}

.above-break {
	position: relative;
}

.menu-container {
	width: 115px;
	position: absolute; 
	top: 0;
	right: 0;
	cursor: pointer;
}

.menu-top:after {
	content: " ";
	display: block;
	height: 0;
	clear: both;
}

#menu-icon {
	width: 2em;
	float: left;
	display: inline-block;
}

.menu-container h1 {
	font-size: 1.5em;
	float: left;
	padding: 5px 10px;
	display: inline-block;
}

#menu {
	float:right;
	list-style-type: none;
	padding-left: 0;
	display: none;
	opacity: 0.85;
	font-size: 0.8em;
	text-align: right;
	padding-right: 1em;
}

.menu-container li {
	background-color: #f4e9e4;
	width: 200px;
	float: left;
	line-height: 2em;
	padding-right: 8%;
	font-size: 1.5em;
}

.menu-container li:hover {
	background-color: #debdae;
}

.menu-container li:hover a {
	color: #ffffff;
}

.menu-container li a {
	color: #76472f;
}

#contact-wrapper {
	overflow: hidden;
}

#banner-image {
	width: 100%;
	height: 50vh;
	background: url("banner.jpg") no-repeat;
	background-size: cover;
	overflow: hidden;
}

#banner-image img {
	width: 100%;
}

#banner-image h1 {
	color: white;
	position: relative;
	top: 80%;
	left: 5%;
	font-size: 7em;
	font-family: "Caslon";
}

.contact-content {
	display: block;
	width: 960px;
	margin: 0px auto;
	padding: 5% 0;
}

.contact-content h4 {
	color: #4d220b;
	font-size: 2em;
}

.contact-content p {
	color:#b84202;
}

.contact-content a {
	color: #352923;
}

#map {
	width: 100%;
}


@font-face {
	font-family: "Caslon";
	src: url("<%= asset_path('caslon.otf') %>") format("truetype");
}


