* {
	margin: 0 auto;
}

body {
	font-family: "Caslon";
	color: #3f2619;
}

a {
	text-decoration: none;
}

#slideshow {
	max-width: 50%;
	max-height: 100vh;
}

.fssActive {
	display: none;
}

#fssList {
	display: none;
}

#fssPrev {
	display: none;
}

#fssNext {
	display: none;
}

#fssPlayPause {
	display: none;
}

.homepage-pic-left {
	width: 50%;
	height: 100vh;
	float: left;
}

.homepage-pic-left img {
	width: 100%;
	height: 100vh;
}

.homepage-text-right {
	width: 50%;
	height: 100vh;
	float: left;
	font-family: "Caslon";
}

.homepage-text-right ul {
	list-style-type: none;
	text-align: left;
	line-height: 2.8em;
	width: 20%;
	padding-top: 35vh;
	font-size: 14px;
}

.homepage-text-right ul a {
	color: #3f2619;
}

.homepage-text-right li {
	font-size: 1.3em;
	font-weight: bold;
}

.lotus {
	position: fixed;
	top: 50%;
	left: 50%;
	margin-top: -125px;
  	margin-left: -125px;
}

.page-content {
	width: 100%;
	height: 100vh;
}

.page-text {
	width: auto;
	float:right;
}

.quote {
	font-style: italic;
	text-align: center;
}

.left-pane {
	float: left;
	height: 100vh;
	width: auto;
	position: fixed;
}

#pic6 {
	height: 50%;
	float:left;
}

#pic7 {
	height: 50%;
	float:left;
	position:fixed;
	left: 0;
	bottom: 0;
}

@font-face {
	font-family: "Caslon";
	src: url("<%= asset_path('caslon.otf') %>") format("truetype");
}
